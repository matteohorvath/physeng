generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String
  subjectId Int
  subject   Subject @relation(fields: [subjectId], references: [id])
}

model Subject {
  id       Int    @id @default(autoincrement())
  name     String
  code     String
  semester Int
  posts    Post[]
}
